    <div class='movie-poster'>
      <%= image_tag @movie.poster_url, class: 'show-movie' %>
    </div>

    <div class='movie-details'>
      <div class='details-header'>
        <h1><%= @movie.title %></h1>
        <span><%= @movie.rating.to_f %>‚≠ê</span>
      </div>
      <p id='movie-overview'><%= @movie.overview %></p>
    </div>
  </div>
  <%#= Movie.first.title %>
</div>
