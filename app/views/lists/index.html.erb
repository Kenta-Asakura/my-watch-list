<div class='lists'>

<h1>Lists</h1>
<div class='lists-container'>
  <% @lists.each do |list| %>
    <div class='list-card'>
        <div class="card mb-3">
          <%= cl_image_tag list.photo.key, class: 'card-img-top' %>
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
          </div>
      </div>
    </div>
  <% end %>
</div>
<p><%= link_to 'Add a new list', new_list_path %></p>
