<div class='fluid-container'>
  <h1 class='bookmarks-header'>Your watchlist</h1>
  <div class='bookmarks-container'>
    <% @bookmarks.each do |bookmark| %>
      <div class='card'>
        <div class='bookmark-case'>
          <% if bookmarked_by_current_user?(bookmark.movie) %>
            <%= simple_form_for [bookmark.movie, bookmark], url: movie_bookmarks_path(bookmark.movie, bookmark), method: :delete, remote: true do |f| %>
              <%= f.button :submit, "Remove Bookmark", class: "btn btn-danger btn-sm" %>
            <% end %>
          <% else %>
            <%= simple_form_for [bookmark.movie, bookmark], remote: true do |f| %>
              <%= f.button :submit, "Add Bookmark", class: "btn btn-primary btn-sm" %>
            <% end %>
          <% end %>
        </div>
        <%= image_tag bookmark.movie.poster_url, class: 'card-img' %>
        <div class="card-body">
          <p>‚≠ê<%= bookmark.movie.rating %></p>
          <%= bookmark.movie.title %>
        </div>
      </div>
    <% end %>
  </div>
</div>
