  <%# var bookmarkHtml = '= j(render partial: "movies/bookmark", formats: :html, locals: { bookmark: @bookmark })'; %>
  <%# document.querySelector('.bookmark-case').innerHTML = bookmarkHtml;

  // Display a success message (optional)
